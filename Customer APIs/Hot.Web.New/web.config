	  <rewrite>
      <rewriteMaps>
        <rewriteMap name="Retail Site">
          <add key="retail" value="index.aspx?retail=1"/>
          <add key="dealer" value="index.aspx?dealer=1"/>
        </rewriteMap>
      </rewriteMaps>
      <rules>
        <rule name="Retail" patternSyntax="ExactMatch" stopProcessing="true">
          <match url="retail"/>
          <action type="Redirect" url="?retail=1" redirectType="Temporary"/>
        </rule>
        <rule name="Corporates" patternSyntax="ExactMatch" stopProcessing="true">
          <match url="help.aspx/corporate"/>
          <action type="Redirect" url="help.aspx?corporate=1" redirectType="Temporary"/>
        </rule>
        <rule name="Corporate Main" patternSyntax="ExactMatch" stopProcessing="true">
          <match url="corporate"/>
          <action type="Redirect" url="?corporate=1"/>
        </rule>
        <rule name="Remove WWW" stopProcessing="true">
          <match url="^(.*)$"/>
          <conditions>
            <add input="{HTTP_HOST}" pattern="^(www\.)(.*)$"/>
          </conditions>
          <action type="Redirect" url="https://ssl.hot.co.zw{PATH_INFO}"/>
        </rule>
        <rule name="StatementRedirect" stopProcessing="true">
          <match url="^s/([^/]+)/?$"/>
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true"/>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true"/>
          </conditions>
          <action type="Redirect" url="Statement.aspx?accountid={R:1}"/>
        </rule>
        <rule name="RewriteUserFriendlyURL1" stopProcessing="true">
          <match url="^selftopup$"/>
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true"/>
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true"/>
          </conditions>
          <action type="Rewrite" url="selftopup.aspx"/>
        </rule>
        <rule name="Self Top Up" patternSyntax="ExactMatch">
          <match url="TopUp"/>
          <action type="Rewrite" url="selftopup.aspx"/>
        </rule>
        <rule name="TeloneTopUp">
          <match url="TopUp-Telone"/>
          <action type="Rewrite" url="selftopup.aspx"/>
        </rule>
        <rule name="Swagger Fix" patternSyntax="ExactMatch">
          <match url="swagger/v3/swagger.json"/>
          <action type="Rewrite" url="api/v3/swagger/v3/swagger.json"/>
        </rule>
      </rules>
      <outboundRules>
        <rule name="Remove Server Response Header">
          <match serverVariable="RESPONSE_SERVER" pattern=".*"/>
          <action type="Rewrite"/>
        </rule>
      </outboundRules>
    </rewrite>
    <security>
      <requestFiltering allowHighBitCharacters="false">
        <fileExtensions allowUnlisted="true"/>
